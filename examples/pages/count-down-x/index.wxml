<view class="view-wrap">
    <text class="type-title">倒计时：</text>
    <i-count-down-x
            target="{{targetTime}}"
            clear-timer="{{clearTimer}}"
    ></i-count-down-x>
</view>

<view class="view-wrap">
    <text class="type-title">前缀：</text>
    <i-count-down-x
            prefix="剩余"
            target="{{targetTime}}"
            clear-timer="{{clearTimer}}"
    ></i-count-down-x>
</view>

<view class="view-wrap">
    <text class="type-title">后缀：</text>
    <i-count-down-x
            suffix="后结束"
            target="{{targetTime}}"
            clear-timer="{{clearTimer}}"
    ></i-count-down-x>
</view>

<view class="view-wrap">
    <text class="type-title">显示天的倒计时：</text>
    <i-count-down-x
            target="{{targetTime1}}"
            show-day="{{true}}"
            clear-timer="{{clearTimer}}"
    ></i-count-down-x>
</view>


<view class="view-wrap">
    <text class="type-title">自定义格式倒计时：</text>
    <i-count-down-x
            target="{{targetTime}}"
            format="{{myFormat}}"
            clear-timer="{{clearTimer}}"
    ></i-count-down-x>
</view>

<view class="view-wrap">
    <text class="type-title">自定义格式倒计时：</text>
    <i-count-down-x
            target="{{targetTime1}}"
            show-day="{{true}}"
            format="{{myFormat1}}"
            clear-timer="{{clearTimer}}"
    ></i-count-down-x>
</view>

<view class="view-wrap">
    <text class="type-title">执行回调的倒计时：</text>
    <i-count-down-x
            target="{{targetTime2}}"
            bindcallback="myLinsterner"
            clear-timer="{{clearTimer}}"
    ></i-count-down-x>
    <text>倒计时状态：{{status}}</text>
</view>


<view class="view-wrap">
    <text class="type-title">修改倒计时样式：</text>
    <i-count-down-x
            target="{{targetTime}}"
            countdown-class="big"
            clear-timer="{{clearTimer}}"
    ></i-count-down-x>
</view>

